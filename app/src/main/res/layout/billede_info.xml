<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <ImageView
        android:layout_width="136dp"
        android:layout_height="144dp"
        android:id="@+id/imageView7"
        android:background = "@drawable/girl"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        android:layout_alignParentEnd="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_weight="3.33" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNavn"
        android:hint="Indtast navn på billede"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Værdi                 :"
        android:id="@+id/textView6"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/editStr"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Billede navn      :"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/editNavn"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="størrelse           :"
        android:id="@+id/textView5"
        android:layout_below="@+id/editNavn"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editNavn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editStr"
        android:layout_below="@+id/editNavn"
        android:layout_alignEnd="@+id/linearLayout2"
        android:hint="Indsæt str"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editVærdi"
        android:layout_below="@+id/editStr"
        android:layout_alignStart="@+id/editStr"
        android:layout_alignEnd="@+id/linearLayout2"
        android:hint="Værdi på billedet" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gem"
        android:id="@+id/gemBtn"
        android:background = "@drawable/roundedbutton"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/editVærdi"
        android:layout_toStartOf="@+id/linearLayout2"
        android:layout_marginTop="43dp" />

</RelativeLayout>